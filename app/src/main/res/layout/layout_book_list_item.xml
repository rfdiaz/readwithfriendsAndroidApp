<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/bookTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.10"
        app:layout_constraintHorizontal_bias="0.40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline30"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="10sp"
        android:background="@drawable/drawable_back"
        />
    <TextView
        android:id="@+id/bookAuthor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.10"
        app:layout_constraintHorizontal_bias="0.20"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/guideline30"
        app:layout_constraintEnd_toEndOf="@id/guideline31"
        android:background="@drawable/drawable_back"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/bookListAdaperIsbn"
        app:layout_constraintHeight_percent="0.10"
        app:layout_constraintHorizontal_bias="0.20"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/guideline31"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/drawable_back"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6"/>


</androidx.constraintlayout.widget.ConstraintLayout>